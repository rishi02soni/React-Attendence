{
  "name": "devsync-employee-tracking",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server:dev": "cd server && npm run dev",
    "server:start": "npm install && cd server && npm install && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "build:full": "npm install && cd server && npm install && cd .. && npm run build",
    "start": "npm run build:full && npm run server:start",
    "start:prod": "npm run build && npm run server:start",
    "serve": "npm run build && npm run server:start",
    "production": "node start-production.js",
    "env:dev": "node switch-env.js dev",
    "env:prod": "node switch-env.js prod"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "date-fns": "^3.3.1",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "terser": "^5.42.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}